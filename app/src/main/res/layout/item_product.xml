<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="product"
        type="com.raka.qtest.data.model.compact.ProductCompact" />
</data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cv_item_product_height">
        <ImageView
            android:id="@+id/iv_item_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/default_image"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/iv_product_like"
            android:layout_width="@dimen/iv_item_product_like_size"
            android:layout_height="@dimen/iv_item_product_like_size"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/iv_item_product_like_margin_start_bottom"
            android:layout_marginBottom="@dimen/iv_item_product_like_margin_start_bottom"
            app:srcCompat="@drawable/ic_heart_unfill"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

</layout>
